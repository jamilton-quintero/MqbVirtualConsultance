{
  "$schema": "https://railway.app/railway.schema.json",
  "stages": [
    {
      "name": "Build",
      "builder": "DockerFile",
      "commands": [
        "chmod +x gradlew",
        "./gradlew build -x check"
      ]
    }
  ],
  "dockerfile": {
    "name": "Deploy",
    "path": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
